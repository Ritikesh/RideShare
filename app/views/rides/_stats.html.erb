<div class="callout panel radius">
	<p class="text-center panel-heading"> RideShare Statistics </p>
	<div class="row">
		<div class="row">
			<div class="columns large-8"><%= link_to "Total Rides", ""%></div>
			<div id="totalCount" class="columns large-4"><%= @inactive_count + @completed_count + @future_count %></div>
		</div>
		<div class="row">
			<div class="columns large-8"><%= link_to "Completed Rides", ""%> </div>
			<div id="completedCount" class="columns large-4"><%= @completed_count %> </div>
		</div>
		<div class="row">
			<div class="columns large-8"><%= link_to "Cancelled Rides", ""%> </div>
			<div id="inactiveCount" class="columns large-4"><%= @inactive_count %> </div>
		</div>
		<div class="row">
			<div class="columns large-8"><%= link_to "Future Rides", ""%> </div>
			<div id="futureCount" class="columns large-4"><%= @future_count %></div>
		</div>
	</div>
</div>