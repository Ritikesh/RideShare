<% if (completed_transaction_count(current_user.id) + future_transaction_count(current_user.id)) == 0 %>
	$("body").html("<script>window.location = '<%= ride_transactions_path %>'</script>")
<% else %>
	$("#totalCount").html('<%= (inactive_transaction_count(current_user.id) + completed_transaction_count(current_user.id) + future_transaction_count(current_user.id)) %>');
	$("#completedCount").html('<%= completed_transaction_count(current_user.id) %>');
	$("#inactiveCount").html('<%= inactive_transaction_count(current_user.id) %>');
	$("#futureCount").html('<%= future_transaction_count(current_user.id) %>');
<% end %>