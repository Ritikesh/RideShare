<div class="callout panel radius">
	<% if current_user && ride_transaction.user_id == current_user.id %>
		<% if ride_transaction.timeofride > Time.now %>
			<%= link_to "<i class='fi-x-circle'></i>".html_safe, ride_transaction, class: "ride-delete right", method: :delete, remote: true %>
			<%= link_to "<i class='fi-pencil'></i>".html_safe, edit_ride_transaction_path(ride_transaction), class: "right margin-right" %>
		<% else %>
			<%= link_to "<i class='fi-check'></i>".html_safe, "#", class: "right margin-right" %>
		<% end %>
	<% end %>
	<p class="text-center panel-heading">
		<i class="fi-clock"></i> 
		<%= ride_transaction.timeofride.to_time.strftime("%A, %d-%m-%Y %H:%M, %Z") %>
	</p>
	<div class="row">
		<div class="row">
			<div class="columns large-4"><%= link_to "Pick up from:", "#"%></div>
			<div class="columns large-8"><%= ride_transaction.from_address %></div>
		</div>
		<div class="row">
			<div class="columns large-4 "><%= link_to "Drop to:", "#"%> </div>
			<div class="columns large-8"><%= ride_transaction.to_address %> </div>
		</div>
	</div>
	<span class="right">
		Posted by: <%= link_to ride_transaction.ride.user.name, ride_transaction.ride.user, class: "success" %>
	</span>
</div>