<header>
  <div class="sticky">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1>
            <%= link_to fa_icon("home 3x"), root_path, class: "item" %>
          </h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
      </ul>

      <section class="top-bar-section">
        <ul class="right">
        <% if current_user %>
          <li class="has-dropdown"> 
            <%= link_to fa_icon("bell", text: " Notifications"), "#" %>
            <ul class="dropdown">
            </ul>
          </li>
          <li class="has-dropdown"> 
            <%= link_to fa_icon("share-square-o", text: " RideShare"), "#" %>
            <ul class="dropdown">
              <li> <%= link_to fa_icon("users", text: " Users"), users_path %></li> 

              <li class="divider"> </li>
              
              <li> <%= link_to fa_icon("car", text: " Post Ride"), new_ride_path %></li> 
              <li> <%= link_to fa_icon("list-alt", text: " My Rides"), rides_path %></li> 

              <li class="divider"> </li>
              
              <li> <%= link_to fa_icon("taxi", text: " Book Ride"), new_ride_transaction_path %></li> 
              <li> <%= link_to fa_icon("list", text: " My Bookings"), ride_transactions_path %></li> 
            </ul>
          </li>
          <li class="divider"> </li>
          
          <li class="has-dropdown"> 
            <a href="#"><%= current_user.name %></a>
            <ul class="dropdown">
              <li> <%= link_to fa_icon("user", text: " Account"), account_path %> </li>
              <li> <%= link_to fa_icon("cog spin", text: " Settings"), edit_account_path %> </li>
              <li> <%= link_to fa_icon("sign-out", text: " Logout"), logout_path %> </li>
            </ul>
          </li>
        <% else %>
          <li> <%= link_to fa_icon("user-plus lg", text: " Register"), new_user_path, {title: "Register"} %> </li>
          <li class="divider"> </li>
          <li> <%= link_to fa_icon("sign-in lg", text: " Sign in"), login_path, {title: "Login"} %> </li>
        <% end %>
        </ul>
      </section>
    </nav>
  </div>
</header>