<!-- add link to profiles, follow-unfollow links. notifications from followed users to be followed from there. -->
<% content_for :title, @title %>
<% content_for :heading, @title %>
<div class="row margin-top">
	<div class="columns large-12">
		<% if @users[0] %>
			<div class="row">
				<div class="columns large-6 level">
					<%= will_paginate @users, renderer: FoundationPagination::Rails %>
				</div>
				<div class="columns large-3 end">
					<% if @users.length > 10 %>
						<%= form_tag search_users_path, method: 'get' do %>
						    <%= text_field_tag 'search', nil, placeholder: "Search", class: "round" %>
						<% end %>
					<% end %>
				</div>
			</div>
			<ul class="users no-bullet">
				<% @users.each do |user| %>
					<li><%= link_to (render 'user', size: 75, user: user), user %></li>
				<% end %>
			</ul>
			<%= will_paginate @users, renderer: FoundationPagination::Rails %>
		<% else %>	
			<div class="panel callout large-6 large-centered">
				'<%= @search %>' not found.
			</div>
		<% end %>
	</div>
</div>
